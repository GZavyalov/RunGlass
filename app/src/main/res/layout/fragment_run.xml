<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добрый день!"
        android:layout_marginLeft="17dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/runScrollLayout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:background="#F1F1F1"
                android:layout_marginRight="7dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Начните пробежку:"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/colorPrimary"

                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="В «среду» вы пробежали 1.3 км за 15 минут"
                    android:layout_marginLeft="20dp"
                    android:textColor="#597265"
                    android:layout_marginTop="18dp"
                    android:textSize="16sp"
                    android:layout_marginRight="20dp"

                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Начать"
                    android:layout_marginTop="17dp"
                    android:id="@+id/buttonGoingToStartRun"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:background="#F1F1F1"
                android:layout_marginRight="7dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Советы:"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/colorPrimary"

                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1) Не стоит делать ускорения с самого начала

2) Для улучшения времени, стоит давать нагрузку своему организму по нарастающей"
                    android:layout_marginLeft="20dp"
                    android:textColor="#597265"
                    android:layout_marginTop="18dp"
                    android:textSize="16sp"
                    android:layout_marginRight="20dp"

                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Перейти к подсказкам"
                    android:layout_marginTop="17dp"
                    android:id="@+id/buttonShowPodscazki"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    />



            </LinearLayout>


        </LinearLayout>
    </ScrollView>





</LinearLayout>
